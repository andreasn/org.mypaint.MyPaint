{
    "app-id": "org.mypaint.MyPaint",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.30",
    "sdk": "org.gnome.Sdk",
    "command": "mypaint",
    "rename-desktop-file": "mypaint.desktop",
    "rename-appdata-file": "mypaint.appdata.xml",
    "rename-icon": "mypaint",
    "copy-icon": true,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--filesystem=home",
        "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "modules": [
        "shared-modules/python2.7/python-2.7.15.json",
        {
            "name": "scons",
            "cleanup": [ "*" ],
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/scons/scons/2.5.1/scons-2.5.1.tar.gz",
                    "sha256": "0b25218ae7b46a967db42f2a53721645b3d42874a65f9552ad16ce26d30f51f2"
                }
            ],
            "build-commands": [
                "python2 setup.py install --prefix=/app"
            ]
        },
        {
            "name": "json-c",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/json-c/json-c/archive/json-c-0.13.1-20180305.tar.gz",
                    "sha256": "5d867baeb7f540abe8f3265ac18ed7a24f91fe3c5f4fd99ac3caba0708511b90"
                }
            ]
        },
        {
            "name": "swig",
            "config-opts": ["--without-boost", "--without-pcre"],
            "cleanup": [ "*" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://prdownloads.sourceforge.net/swig/swig-3.0.12.tar.gz",
                    "sha256": "7cf9f447ae7ed1c51722efc45e7f14418d15d7a1e143ac9f09a668999f4fc94d"
                }
            ]
        },
        {
            "name": "numpy",
            "buildsystem": "simple",
            "sources": [
                    {
                        "type": "archive",
                        "url": "https://github.com/numpy/numpy/releases/download/v1.14.3/numpy-1.14.3.tar.gz",
                        "sha256": "cfcfc7a9a8ba4275c60a815c683d59ac5e7aa9362d76573b6cc4324ffb1235fa"
                    }
            ],
            "build-commands": [
                "python2 setup.py build -j 4",
                "python2 setup.py install --prefix /app"
            ]
        },
        {
            "name": "pycairo",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/pygobject/pycairo/releases/download/v1.13.1/pycairo-1.13.1.tar.gz",
                    "sha256": "d8f58de67ddd01eda9e5112de57599b7d0154d71c9474821e98866c228794641"
                }
            ],
            "build-commands": [
                "python2 setup.py build",
                "python2 setup.py install --prefix /app"
            ]
        },
        {
            "name": "pygobject",
            "build-options" : {
                "env": {
                    "PYTHON": "python2"
                }
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "http://ftp.gnome.org/pub/GNOME/sources/pygobject/3.25/pygobject-3.25.1.tar.xz",
                    "sha256": "8728bb27078f7ee45c431ccbc237a58fb6d6eb1b7a0668bbe29eb107267bd736"
                }
            ]
        },
        {
            "name": "mypaint",
            "buildsystem": "simple",
            "sources": [
                    {
                        "type": "git",
                        "url": "https://github.com/mypaint/mypaint.git",
                        "branch": "v1.2.1",
                        "commit": "bcf5a28d38bbd586cc9d4cee223f849fa303864f"
                    },
                    {
                        "type": "patch",
                        "path": "externalapp.patch"
                    }
            ],
            "build-commands": [
                "scons",
                "scons prefix=/app install"
            ]
        }
    ]
}
